namespace VariablesExercise
{
    public class Program
    {
      

        static void Main(string[] args)
        {
            string daughterName = "Lyla";

            int daughterAge = 2;

            char letterReasoning = 'Y';

            bool isCute = true;

            double daughterWeight = 8.2;

            decimal daughterLength = 19.5m;

            Console.WriteLine($"My daughter's name is {daughterName}, she is {daughterAge} months old.");
            Console.WriteLine ($"Most people spell it 'Lila', but we like it with a {letterReasoning}.");
            Console.WriteLine($"It is {isCute} that she is very cute.");
            Console.WriteLine($"When she was born she was {daughterWeight} pounds and {daughterLength} inches long.");

        }
    }
}
